pipeline {
    agent any
    tools {
        maven 'maven-3.9.9'
    }

    stages {

        stage('build jar'){
            steps {
                script {
                    echo "building the application..."
                    sh 'mvn clean package'
                }
            }
        
        }

        stage('build image') {
            
            steps {
                echo 'building the docker image...'
                withCredentials([usernamePassword(credentialsId:'docker-hub-rep-credentials',passwordVariable: 'PASS',usernameVariable: 'USER')]){
                    sh 'docker build -t roczyno/demo-app:jma-2.0 .'
                    sh "echo $PASS | docker login -u $USER  --password-stdin"
                    sh 'docker push roczyno/demo-app:jma-2.0'
                }
            }
        }

        stage('Dev') {
            steps {
                echo 'Starting the dev process...'

            }
        }
    }

//     post {
//          always {
//
//          }
//          success {
//          }
//          failure {
//          }
//     }
}
