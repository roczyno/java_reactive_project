#!/usr/bin/env groovy
@Library('jenkins-shared-library')_

pipeline {
    agent any
    tools {
        maven 'Maven'
    }

    stages {

        stage('build jar'){
            steps {
                script {
                  buildJar()
                }
            }
        
        }

        stage('build image') {
            
            steps {
                script {
                buildImage 'roczyno/my-repo:jma-3.0'
                }
            }
        }

        stage('Dev') {
            steps {
                echo 'Starting the dev process...'

            }
        }
    }

